<div id="{UNITIDNUMBER}" class="unit unit{UNITNUMBER}">
    <div class="imgCatalog" style="background-image: url({URL});"></div>
    <div class="catalogForm">
        <div class="unitName">{NAME}</div>
        <div class="unitInfo">
            <b>Состав:</b> 80% хлопок, 20% полиэстер, 3-х нитчатый футер <br>
            <b>Логотип:</b> вышивка
        </div>
        <table class="unitSize">
            <tr>
                <td class="sSize">S</td>
                <td class="mSize">M</td>
                <td class="lSize">L</td>
            </tr>
        </table>
        <div class="unitPrice">{TEXT_PRICE}</div>
        <div class="unitDelivery">Доставка в течении 1-3 дней</div>
        <input class="catalogButton" type="button" value="В корзину">
    </div>
</div>